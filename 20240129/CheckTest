    <label for ="print">Inserire <b>Codice Fiscale.</b></label>
    <input type="text" id ="CF" >
    <input type="button" onclick="Conferma()" value="Conferma.">

    <script>
        function Conferma()
        {

        
        var Codice = document.getElementById("CF").value;

        if (CheckCode(Codice)) 
        {
            alert("Il codice fiscale è valido!");
        }
        else 
        {  
            alert("Il codice fiscale non è valido");
        }

        }
    
        function CheckCode(Codice)
        {
            var Check = /^[A-Z]{6}\d{2}[A-Z]\d{2}[A-Z]\d{3}[A-Z]$/;
            return Check.test(Codice);
        }
        


    </script>
