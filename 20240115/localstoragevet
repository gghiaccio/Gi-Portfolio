    <input type="button" onclick="Leggi()" value="Visualizza Dati">

    <script>
        function Leggi() 
        {
            let DatiUtente = JSON.parse(localStorage.getItem("DatiUtente"));
            document.getElementById("TextNome").innerHTML = DatiUtente.Nome;
            document.getElementById("TextCognome").innerHTML = DatiUtente.Cognome;
            document.getElementById("TextGenere").innerHTML = DatiUtente.Genere;
            document.getElementById("TextCitta").innerHTML = DatiUtente.Citta;
            document.getElementById("TextIndirizzo").innerHTML = DatiUtente.Indirizzo;
            document.getElementById("TextProvincia").innerHTML = DatiUtente.Provincia;
            document.getElementById("TextMaterieValutate").innerHTML = DatiUtente.MaterieValutate.join(", ");
        }
    </script>
