    <input type="radio" name="Dimensione" value="15" name="15" onclick="CambiaDimensione(this)">
    <input type="radio" name="Dimensione" value="30" name="30" onclick="CambiaDimensione(this)">
    <input type="radio" name="Dimensione" value="45" name="45" onclick="CambiaDimensione(this)">
