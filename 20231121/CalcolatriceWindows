<script>
var Value = "";

function ValueonScreen() 
{
    document.getElementById("display").value = Value;
}

function zero() 
{
    Value += "0";
    ValueonScreen();
}

function one() 
{
    Value += "1";
    ValueonScreen();
}

function two() 
{
    Value += "2";
    ValueonScreen();
}

function three() 
{
    Value += "3";
    ValueonScreen();
}

function four() 
{
    Value += "4";
    ValueonScreen();
}

function five() 
{
    Value += "5";
    ValueonScreen();
}

function six() 
{
    Value += "6";
    ValueonScreen();
}

function seven() 
{
    Value += "7";
    ValueonScreen();
}

function eight() 
{
    Value += "8";
    ValueonScreen();
}

function nine() 
{
    Value += "9";
    ValueonScreen();
}

function comma() 
{
    Value += ".";
    ValueonScreen();
}

function Addition() 
{
    x = parseFloat(Value);
    operation = "+";
    Value = "";
    ValueonScreen();
}

function Subtraction() 
{
    x = parseFloat(Value);
    operation = "-";
    Value = "";
    ValueonScreen();
}

function Multiplication() 
{
    x = parseFloat(Value);
    operation = "*";
    Value = "";
    ValueonScreen();
}

function Division() 
{
    x = parseFloat(Value);
    operation = "/";
    Value = "";
    ValueonScreen();
}

function Fraz() 
{
    x = parseFloat(Value);
    result = 1 / x;
    Value = result.toString();
    ValueonScreen();
}

function LastDigit() 
{
    Value = Value.slice(0, -1);
    ValueonScreen();
}

function Elev() 
{
    x = parseFloat(Value);
    result = Math.pow(x, 2);
    Value = result.toString();
    ValueonScreen();
}

function SquareRoot() 
{
    x = parseFloat(Value);
    result = Math.sqrt(x);
    Value = result.toString();
    ValueonScreen();
}

function Cancel() 
{
    Value = "";
    ValueonScreen();
}

function Perc() 
{
    x = parseFloat(Value);
    result = x / 100;
    Value = result.toString();
    ValueonScreen();
}

function Equals() {
    y = parseFloat(Value);

    if (operation === "+") 
    {
        result = x + y;
    } 
    else if (operation === "-") 
    {
        result = x - y;
    } 
    else if (operation === "*") 
    {
        result = x * y;
    } 
    else if (operation === "/") 
    {
        result = x / y;
    }

    Value = result.toString();
    ValueonScreen();
}

   




