    <input type="button" value="Conferma" onclick="SalvaDati()"> 

    <script>
        function SalvaDati() 
        {
            let Nome = document.getElementById("name").value;
            let Cognome = document.getElementById("surname").value;
            let Genere = document.querySelector('input[name="Genere"]:checked').value;
            let Citta = document.getElementById("City").value;
            let Indirizzo = document.getElementById("Address").value;
            let Provincia = document.getElementById("ListaProv").value;
            let MaterieValutate = [];


            if (document.getElementById("box1").checked) MaterieValutate.push("Italiano");
            if (document.getElementById("box2").checked) MaterieValutate.push("Storia");
            if (document.getElementById("box3").checked) MaterieValutate.push("Matematica");
            if (document.getElementById("box4").checked) MaterieValutate.push("Inglese");
            if (document.getElementById("box5").checked) MaterieValutate.push("Informatica");
            if (document.getElementById("box6").checked) MaterieValutate.push("TPSIT");


            localStorage.setItem("SettedNome", Nome);
            localStorage.setItem("SettedCognome", Cognome);
            localStorage.setItem("SettedGenere", Genere);
            localStorage.setItem("SettedCitta", Citta);
            localStorage.setItem("SettedIndirizzo", Indirizzo);
            localStorage.setItem("SettedProvincia", Provincia);
            localStorage.setItem("SettedMaterieValutate", JSON.stringify(MaterieValutate));


            window.location.href = "localstorage";
        }
    </script>

