    <p id="TextMaterieValutate"></p>

    <input type="button" onclick="Leggi()" value="Visualizza Dati">

    <script>
        function Leggi() 
        {
            let Nome = localStorage.getItem("SettedNome");
            let Cognome = localStorage.getItem("SettedCognome");
            let Genere = localStorage.getItem("SettedGenere");
            let Citta = localStorage.getItem("SettedCitta");
            let Indirizzo = localStorage.getItem("SettedIndirizzo");
            let Provincia = localStorage.getItem("SettedProvincia");
            let MaterieValutate = JSON.parse(localStorage.getItem("SettedMaterieValutate"));

            document.getElementById("TextNome").innerHTML = Nome;
            document.getElementById("TextCognome").innerHTML = Cognome;
            document.getElementById("TextGenere").innerHTML = Genere;
            document.getElementById("TextCitta").innerHTML = Citta;
            document.getElementById("TextIndirizzo").innerHTML = Indirizzo;
            document.getElementById("TextProvincia").innerHTML = Provincia;
            document.getElementById("TextMaterieValutate").innerHTML = MaterieValutate.join(", ");
        }
    </script>
