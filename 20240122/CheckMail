    <label for="print"> Inserire <b>Mail.</b></label> <br>
    <input type="text" id="Email">
    <input type="button" onclick="Conferma()" value="Conferma.">

    <script>
        function Conferma() {
            let EmailInserita = document.getElementById("Email").value;

            let RegTest = /@/;

            if (RegTest.test(EmailInserita)) 
            {
                let DominioIniziale = EmailInserita.split('@')[1];
                let DominioFinale = DominioIniziale.split('.')[1];

                let Valido = true;  

                if (DominioFinale.length >= 2 && DominioFinale.length <= 4) 
                {
                    for (let i = 0; i < DominioFinale.length; i++) 
                    {
                        if (DominioFinale[i].length < 2 || DominioFinale[i].length > 4) 
                        {
                            Valido = false;
                            break;
                        }
                    }

                    if (Valido)  
                    {
                        alert("La mail è valida");
                    }
                    else
                    {
                        alert("La mail non è valida");
                    }
                } 
                else 
                {
                    alert("La mail non è valida");
                }
            } 
            else 
            {
                alert("La mail non è valida");
            }
        }
    </script>

