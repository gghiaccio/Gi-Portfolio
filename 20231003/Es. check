    <script>
            function Stampa()
            {
                //nome
                    var textname1 = document.getElementById("name").value;
                    document.getElementById("textname1").innerHTML = textname1
                    
                //cognome
                var textsurname = document.getElementById("surname").value;
                document.getElementById("textsurname").innerHTML = textsurname;

                //italiano 
                var checkBox1 = document.getElementById("box1");
                var text1 = document.getElementById("text1");
                if (checkBox1.checked == true)
                {
                    document.getElementById("text1").innerHTML="vero";
                } 
                else 
                {
                    document.getElementById("text1").innerHTML="falso";
                }

                //storia
                var checkBox2 = document.getElementById("box2");
                var text2 = document.getElementById("text2");
                if (checkBox2.checked == true)
                {
                    document.getElementById("text2").innerHTML="vero";
                } 
                else 
                {
                    document.getElementById("text2").innerHTML="falso";
                }

                //matematica

                var checkBox3 = document.getElementById("box3");
                var text3 = document.getElementById("text3");
                if (checkBox3.checked == true)
                {
                    document.getElementById("text3").innerHTML="vero";
                } 
                else 
                {
                    document.getElementById("text3").innerHTML="falso";
                }

                //inglese
                var checkBox4 = document.getElementById("box4");
                var text4 = document.getElementById("text4");
                if (checkBox4.checked == true)
                {
                    document.getElementById("text4").innerHTML="vero";
                } 
                else 
                {
                    document.getElementById("text4").innerHTML="falso";
                }

                //informatica
                var checkBox5 = document.getElementById("box5");
                var text5 = document.getElementById("text5");
                if (checkBox5.checked == true)
                {
                    document.getElementById("text5").innerHTML="vero";
                } 
                else 
                {
                    document.getElementById("text5").innerHTML="falso";
                }

                //tps
                var checkBox6 = document.getElementById("box6");
                var text6 = document.getElementById("text6");
                if (checkBox6.checked == true)
                {
                    document.getElementById("text6").innerHTML="vero";
                } 
                else 
                {
                    document.getElementById("text6").innerHTML="falso";
                }
            }
       
